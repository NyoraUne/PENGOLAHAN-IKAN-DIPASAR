{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "[!a]*/**": true,
        "a[!p]*/**": true,
        "ap[!p]*/**": true
    },
    "colorTabs.config": [
        {
            "regex": "app/Views/.*",
            "color": "#FF0000",
            "label": "MOBILE"
        },
        {
            "regex": ".*/web/.*"
        },
        {
            "regex": ".*/mobile/.*"
        }
    ]
}