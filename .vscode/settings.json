{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "colorTabs.config": [
        {
            "regex": "app/Views/.*",
            "color": "#FF0000",
            "label": "MOBILE"
        },
        {
            "regex": ".*/web/.*"
        },
        {
            "regex": ".*/mobile/.*"
        }
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "python.formatting.provider": "none"
}